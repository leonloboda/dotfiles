[bar/mybar]
monitor = ${env:MONITOR:HDMI-1}
enable-ipc=true
height = 25
width = 98%
font-0 =JetBrainsMono Nerd Font:size=9;2
offset-x = 9
offset-y = 6
radius = 6 
border-size = 0                                                                                                                                    
border-color = ${colors.foreground}
background = ${colors.background}
foreground = ${colors.foreground}
tray-position=right
tray-detached=false
line-size = 3
padding=1
modules-left = launcher battery cpu temperature
modules-center = i3 
modules-right =  protonmail pulseaudio time powermenu
scroll-up = i3-wsnext   
scroll-down = i3-wsprev  
override-redirect = true
wm-restack = i3
